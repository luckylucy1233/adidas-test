/* miniprogram/pages/search/search.wxss */
.wrap {
  display: flex;
}

.half {
  position: relative;
  width: 50%;
  padding: 5rpx;
  overflow: hidden;
}

.img {
}

.half .imgBox{
  position: relative;
}

.half .circle {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -25rpx;
  margin-left: -25rpx;
  width: 50rpx;
  height: 50rpx;
  border: 5rpx #eee solid;
  border-left-color: #ff5500;
  border-right-color: #0c80fe;
  border-radius: 100%;
  animation: loading1 1s infinite linear;
}
@keyframes loading1 {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.isAll{
  text-align: center;
}
